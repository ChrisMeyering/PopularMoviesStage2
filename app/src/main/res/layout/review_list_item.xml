<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/FramedItemLayout"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_review_author"
        style="@style/DescriptionText.Bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_review_contents"
        android:paddingBottom="4dp"
        style="@style/DescriptionText"
        app:layout_constraintTop_toBottomOf="@id/tv_review_author"
        app:layout_constraintStart_toStartOf="@id/tv_review_author"
        app:layout_constraintEnd_toEndOf="@id/tv_review_author"/>

</android.support.constraint.ConstraintLayout>